<div class="container body-content">
    <div class="row">
        {{#each articles}}
            <div class="col-md-6">
                <article>
                    <header>
                        <h2>{{this.title}}</h2>
                    </header>

                    <img src="{{this.imageUrl}}" width="450px" height="300px" alt="">

                    <p>Summary: {{this.summary}}
                    </p>

                    <small class="author">
                        Author: <strong>{{this.User.fullName}}</strong>
                    </small>

                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/article/details/{{this.id}}">Read more &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        {{/each}}
    </div>
</div>
